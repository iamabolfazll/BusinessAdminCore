@model List<ProductDTO>;
@* @using DTO; *@


@{
	ViewBag.Title = "Products";
}
<form action="/product/list" method="get">
<div class="container-xxl">
    <div class="input-group mb-3">
    <span class="input-group-text" id="basic-addon1">نوع جست و جو </span>
    <select name="SearchType" class="form-select" aria-label="Default Select">
        <option selected>انتخاب کنید </option>
        @if (ViewBag.SearchType == "Name" )
                {
                    <option value="Name" selected="selected">نام</option>
                }
                else
                {
                    <option value="Name">نام</option>

                }

                @if (ViewBag.SearchType == "Description")
                {
                    <option value="Description" selected="selected">توضیحات</option>
                }
                else
                {
                    <option value="Description">توضیحات</option>

                }
    </select>
    <input name="SearchText" type="text" class="form-control" placeholder="عبارت جست و جو" aria-label="SearchText" aria-describedby="basic-addon1" />
        <button type="submit" class="btn btn-primary">جست و جو</button>



    </div>
<table class="table table-hover table-primary table-striped">

    <thead>
        <tr >
            <th scope="col">ردیف</th>
            <th scope="col">نام</th>
            <th scope="col">توضیحات</th>
            <th scope="col">قیمت</th>
            <th scope="col">تخفیف</th>
        </tr>
    </thead>
    <tbody class="table-group-divider">
        @foreach (var item in Model)
        {
        <tr>
            <th>@item.Id</th>
            <td>@item.Name</td>
            <td>@item.Description</td>
            <td>@item.Price</td>
            <td>@item.Discount</td>


        </tr>
        }

    </tbody>
</table>
</div>
</form>
